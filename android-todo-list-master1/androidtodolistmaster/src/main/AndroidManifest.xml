<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.placella.todo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/to_do_list" android:theme="@android:style/Theme.Light"
        android:supportsRtl="true">
        <activity
            android:name=".ActivityMain"
            android:label="@string/to_do_list">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivityEditNote"></activity>
        <activity android:name=".ActivityEditList"></activity>
        <activity android:name=".ActivityAdd"></activity>
        <activity android:name=".ActivityViewNote"></activity>
        <activity android:name=".ActivityViewList"></activity>
        <activity android:name=".ActivityNotification"></activity>
    </application>

</manifest>