<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.placella.todo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/to_do_list"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.Light" >
        <activity
            android:name="com.placella.todo.ActivityMain"
            android:label="@string/to_do_list" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.placella.todo.ActivityEditNote" />
        <activity android:name="com.placella.todo.ActivityEditList" />
        <activity android:name="com.placella.todo.ActivityAdd" />
        <activity android:name="com.placella.todo.ActivityViewNote" />
        <activity android:name="com.placella.todo.ActivityViewList" />
        <activity android:name="com.placella.todo.ActivityNotification" />
    </application>

</manifest>